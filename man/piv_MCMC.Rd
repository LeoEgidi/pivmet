\deqn{ \bm{\mu}_j  \sim \mathcal{N}_2(\bm{\mu}_0, LDL^{T})}
\deqn{L \sim \mbox{LKJ}(\eta)}
\deqn{D_j \sim \mbox{HalfCauchy}(0, \sigma_d).}

